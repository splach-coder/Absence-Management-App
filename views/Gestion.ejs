<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/gst.css" />
    <script defer src="/js/ajaxCalls.js"></script>
    <title>Formulaire</title>
  </head>
  <a href="/">
    <div class="arrow">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </a>
  <body>
    <div class="login-box">
      <form method="post" action="users/absence/add">
        <div class="user-box">
          <input
            type="text"
            id="user_id"
            name="user_id"
            value="<%= (typeof id !== 'undefined') ? id : '' %>"
            required="true" />
          <label>ID</label>
        </div>
        <div class="user-box1">
          <input type="date" name="date" required="true" />
          <label>Date</label>
        </div>
        <div class="user-box">
          <input type="number" name="hours" required="" />
          <label>Nombre Heure</label>
        </div>
        <div class="user-box">
          <input type="text" name="motif" required="" />
          <label>Motif</label>
        </div>
        <button type="submit">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Enregistrer & Affichier
        </button>
      </form>
    </div>

    <div class="login-box2">
      <form>
        <div class="user-box1">
          <input type="text" id="nom" readonly />
          <label>Nom Complet</label>

          <div class="cards">
            <div
              class="text"
              style="
                color: #6dc9c9;
                font-size: 3em;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translateX(-50%) rotate(45deg);
              ">
              no item found
            </div>
          </div>
        </div>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </body>
</html>
